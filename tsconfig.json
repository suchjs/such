{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution":"node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths":{
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib/*",
    "**/*.spec.ts"
  ]
}